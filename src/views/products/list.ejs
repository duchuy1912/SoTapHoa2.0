        </script>
        <script>
            function changeQty(btn, value) {
                const product = btn.closest(".product");
                const input = product.querySelector(".qty-input");

                let qty = parseInt(input.value) || 1;
                qty += value;
                if (qty < 1) qty = 1;
                input.value = qty;

                // c·∫≠p nh·∫≠t l·∫°i th√†nh ti·ªÅn
                const select = product.querySelector("select");
                changePrice(select);
            }
        </script>
        <script>
            window.onload = function () {
                document.querySelectorAll(".product select").forEach(select => {
                    changePrice(select);
                });
